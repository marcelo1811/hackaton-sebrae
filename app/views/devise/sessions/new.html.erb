<style type="text/css">
  .body-div {
    background-image: url("https://res.cloudinary.com/dpkbckolo/image/upload/v1569103610/background.svg");
    background-repeat: no-repeat;
    background-size: 100%;
  }

  .panels {
    border-radius: 12px;
    background-color: #1b7abb;
  }

  .panel-login {
    opacity: 0.7;
    margin-top: 250px;
    height: 20%;
  }

  .button-enter {
    height: 7%;
    width: 80%;
    margin: 10px auto;
    display: block;
    color: white;
    border: none;
  }
</style>

<body>
  <div class="body-div d-flex justify-content-center align-items-center" style="width: 100vw; height: 100vh">
    <div style="width:20%; height:100%;">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="panels panel-login">
            <div class="form-inputs">
              <div class="container">
                <%= f.input :email,
                            required: false,
                            autofocus: true,
                            input_html: { autocomplete: "email" } %>
                <%= f.input :password,
                            required: false,
                            input_html: { autocomplete: "current-password" } %>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                <%= render "devise/shared/links" %>
              </div>
            </div>
        </div>
      <%= f.button :submit, "Log in", class: 'panels button-enter' %>
      <% end %>
    </div>
  </div>
</body>
