<tr>
  <td><%= beaty_date(resource.created_at) %></td>
  <td><%= object_name(resource) %></td>
  <td><strike><%= object_from(resource) %></strike></td>
  <td><%= object_to(resource) %></td>
  <td>
    <button type="button" class="btn btn-circle" data-toggle="modal"
        data-target="#observation-modal" title="Observações">
        <i class="material-icons btn-icon">rate_review</i>
    </button>
  </td>
</tr>

<!-- Modal -->
        <div class="modal fade" id="observation-modal" tabindex="-1" role="dialog" aria-labelledby="observation-title"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <form>
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="observation-title">Observações</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col">
                                    Nome Fantasia
                                </div>
                                <div class="col">
                                    Cidade
                                </div>
                                <div class="col">
                                    Data
                                </div>
                            </div>
                            <div class="row">
                                <input type="text" class="form-control modal-division col" id="name-filter"
                                    readonly="true" />
                                <input type="text" class="form-control modal-division col" id="name-filter"
                                    readonly="true" />
                                <input type="date" class="form-control modal-division col" readonly="true"
                                    id="name-filter" />
                            </div>
                            <div class="form-group" style="margin-top: 10px">
                                <label for="observation-area">Observações</label>
                                <textarea class="form-control" id="observation-area" readonly="true"
                                    rows="8"></textarea>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
